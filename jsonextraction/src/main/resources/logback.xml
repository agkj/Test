<configuration>

    <!-- Define log pattern -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />

    <!--Appender-->
    <appender name="POST_FILE" class="ch.qos.logback.core.FileAppender">
        <file>${user.home}/Desktop/post_requests.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="RESPONSE_FILE" class="ch.qos.logback.core.FileAppender">
        <file>${user.home}/Desktop/response_request.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>




    <!-- Logger for POST requests -->
    <logger name="com.json.jsonextraction.Controllers.PersonController" level="INFO" additivity="false">
        <appender-ref ref="POST_FILE" />
    </logger>
    <!-- Logger for RESPONSE requests -->
    <logger name="com.json.jsonextraction.Services.PersonService" level="INFO" additivity="false" >
        <appender-ref ref="RESPONSE_FILE" />
    </logger>


